# turn off .htaccess
<Files .htaccess>
order allow,deny
deny from all
</Files>

# turn off dir acces
Options -Indexes

# hide file dir
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
